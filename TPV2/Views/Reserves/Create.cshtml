@model TPV2.Models.Reserves

@{
    ViewData["Title"] = "Criar";
}

<h1>Criar</h1>

<h4>Reservas</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
             @Html.Raw(TempData["msg"])
            <div class="form-group">
                <label asp-for="CheckIn" class="control-label">CheckIn</label>
                <input type="date" asp-for="CheckIn" class="form-control" min="2022/01/10" max="2022/01/12" />
                <span asp-validation-for="CheckIn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CheckOut" class="control-label">CheckOut</label>
                <input asp-for="CheckOut" class="form-control" />
                <span asp-validation-for="CheckOut" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PropertyId" class="control-label">Propriedade</label>
                <select asp-for="PropertyId" class="form-control" asp-items="ViewBag.PropertyId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Observations" class="control-label">Observações</label>
                <input asp-for="Observations" class="form-control" />
                <span asp-validation-for="Observations" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</div>

