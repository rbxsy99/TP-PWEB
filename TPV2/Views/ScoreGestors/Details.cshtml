@model TPV2.Models.ScoreGestor

@{
    ViewData["Title"] = "Detalhes";
}

<h1>Detalhes</h1>

<div>
    <h4>Avaliações de Gestores</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Gestor
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SGGestorID.UserName)
        </dd>
        <dt class = "col-sm-2">
            Comentários
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Comments)
        </dd>
        <dt class = "col-sm-2">
            Avaliação de cliente
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ScoreClient)
        </dd>
        <dt class = "col-sm-2">
            Cliente
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SGUserID.UserName)
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model.ScoreGestorId" class="btn btn-primary">Edit</a>
    }
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</div>
