@model TPV2.Models.ScoreClient

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>ScoreClient</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ScoreClientId" />
            <div class="form-group">
                <label asp-for="Comments" class="control-label">Comentários</label>
                <input asp-for="Comments" class="form-control" />
                <span asp-validation-for="Comments" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ScorePropriedade" class="control-label">Score Propriedade</label>
                <input asp-for="ScorePropriedade" class="form-control" />
                <span asp-validation-for="ScorePropriedade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ScoreProprietario" class="control-label">Score Proprietário</label>
                <input asp-for="ScoreProprietario" class="form-control" />
                <span asp-validation-for="ScoreProprietario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProprietarioId" class="control-label">Proprietário</label>
                <select asp-for="ProprietarioId" class="form-control" asp-items="ViewBag.ProprietarioId"></select>
                <span asp-validation-for="ProprietarioId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ScoreFuncionário" class="control-label">Score Funcionário</label>
                <input asp-for="ScoreFuncionário" class="form-control" />
                <span asp-validation-for="ScoreFuncionário" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FuncionarioId" class="control-label">Funcionário</label>
                <select asp-for="FuncionarioId" class="form-control" asp-items="ViewBag.FuncionarioId"></select>
                <span asp-validation-for="FuncionarioId" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="isRemoved" /> @Html.DisplayNameFor(model => model.isRemoved)
                </label>
            </div>
            @if (User.IsInRole("Admin"))
            {
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            }

        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

