@model TPV2.Models.ScoreClient
@using Microsoft.AspNetCore.Identity;
@inject UserManager<AplicationUser> userManager

@{
    ViewData["Title"] = "Detalhes";
}

<h1>Detalhes da Avaliação</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Cliente
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SCClientID.UserName)
        </dd>
        @if (!User.IsInRole("Cliente"))
        {
            <dt class="col-sm-2">
                ID Reserva
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Reserves.ReserveId)
            </dd>
        }
        <dt class="col-sm-2">
            Comentários
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Comments)
        </dd>
        <dt class="col-sm-2">
            Score Propriedade
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ScorePropriedade)
        </dd>
        <dt class="col-sm-2">
            Score Proprietário
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ScoreProprietario)
        </dd>
        <dt class="col-sm-2">
            Proprietário
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SCProprietarioID.UserName)
        </dd>
        <dt class="col-sm-2">
            Score Funcionário
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ScoreFuncionário)
        </dd>
        <dt class="col-sm-2">
            Funcionário
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SCFuncionarioID.UserName)
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model.ScoreClientId" class="btn btn-primary">Edit</a>
    }
    @if (User.IsInRole("Cliente"))
    {
        <a asp-controller="ScoreClients" asp-action="Index" asp-route-userId="@userManager.GetUserId(User)" class="btn btn-secondary">Voltar</a>
    }
    else
    {
        <a asp-action="Index" class="btn btn-secondary">Voltar</a>
    }

</div>
