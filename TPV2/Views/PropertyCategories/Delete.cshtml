@model TPV2.Models.PropertyCategories

@{
    ViewData["Title"] = "Apagar";
}

<h1>Apagar</h1>

<h3>Tem a certeza que pretende apagar esta propriedade?</h3>
<div>
    <h4>Categorias de Propriedade</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.isRemoved)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.isRemoved)
        </dd>
    </dl>
    
